#include<iostream>
using namespace std;
void PrintNumbers(int n){
    if(n==1){
        cout<<1;
        return;
    }
    cout<<n<<" ";
    PrintNumbers(n-1);
}
void PrintNumbersAscendingOrder(int n){
    if(n==1){
        cout<<1<<" ";
        return;
    }
    PrintNumbersAscendingOrder(n-1);
    cout<<n<<" ";
}
int SumofFirstNNaturalNumbers(int n,int sum){
    if(n==0){
        return 0;
    }
    sum=n+SumofFirstNNaturalNumbers(n-1,sum);
    return sum;

}

int FactorialofaNumber(int n){
    if(n==0||n==1){
        return n;
    }
    int ans = FactorialofaNumber(n-1);
    int finalAns= n * ans;
    return finalAns;

}
int  Fibonachi(int n){
    if(n==0||n==1){
        return n;
    }
    int ans = Fibonachi(n-1)+Fibonachi(n-2);
    return ans;
}
void ReverseanArray(int arr[],int size,int left,int right){
    if(left>=right){
        return;
    }
    swap(arr[left],arr[right]);
    ReverseanArray(arr,size,left+1,right-1);

}
bool CheckifaStringisaPalindrome(string str,int left,int right){
    if(left>=right){
        return true;
    }
    if(str[left]!=str[right]){
        return false;
    }
    return CheckifaStringisaPalindrome(str,left,right);
    

}
void PrintNtimes(int n){
    if(n==0){
        return;
    }
    cout<<"Hello"<<endl;
    PrintNtimes(n-1);
}
void PrintNumbersfrom1toN(int n){
    if(n==0){
        return;
    }
    PrintNumbersfrom1toN(n-1);
    cout<<n<<" ";
}

void PrintNumbersfromNto1(int n){
    if(n==0){
        return;
    }
    cout<<n<<" ";
    PrintNumbersfromNto1(n-1);
}
int FindtheSumofFirstNNaturalNumbers(int n,int sum){
    if(n==0){
        return 0;
    }
     sum = n +FindtheSumofFirstNNaturalNumbers(n-1,sum);
    return sum;

}


